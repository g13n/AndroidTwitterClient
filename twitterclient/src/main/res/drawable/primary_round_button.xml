<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <stroke android:width="1dp" android:color="#ff0000ff"/>
            <solid android:color="#ff0000ff"/>
            <corners android:radius="4dp"/>
            <padding android:bottom="6dp" android:left="12dp"
                     android:right="12dp" android:top="6dp"/>

        </shape>
    </item>

    <item>
        <shape>

            <stroke android:width="1dp" android:color="#ff285e8e"/>
            <solid android:color="#ff3276b1"/>
            <corners android:radius="4dp"/>
            <padding android:bottom="6dp" android:left="12dp"
                     android:right="12dp" android:top="6dp"/>

        </shape>
    </item>

</selector>
